extends ../layouts/layout

block content
  form.positionForm(method="post" action="/position")
    .workingDay.positionForm__column
      .column__title 근무일
      .column__inputs
        input.jsFirstInput(type="radio" id="weekday" name="workingDay" value="weekday" required)
        label(for="weekday") 평일
        input(type="radio" id="weekend" name="workingDay" value="weekend")
        label(for="weekend") 주말
    .morning.positionForm__column
      .column__title (7시) 포지션 번호
      .column__inputs
        input.jsFirstInput(type="radio" id="morningOne" name="morningPositionNumber" value="0" required)
        label(for="morningOne") 1
        input(type="radio" id="morningTwo" name="morningPositionNumber" value="1")
        label(for="morningTwo") 2
        input(type="radio" id="morningThree" name="morningPositionNumber" value="2")
        label(for="morningThree") 3
    .afternoon.positionForm__column
      .column__title (11시) 포지션 번호
      .column__inputs
        input.jsFirstInput(type="radio" id="afternoonOne" name="afternoonPositionNumber" value="0" required)
        label(for="afternoonOne") 1
        input(type="radio" id="afternoonTwo" name="afternoonPositionNumber" value="1")
        label(for="afternoonTwo") 2
        input(type="radio" id="afternoonThree" name="afternoonPositionNumber" value="2")
        label(for="afternoonThree") 3
        input(type="radio" id="afternoonFour" name="afternoonPositionNumber" value="3")
        label(for="afternoonFour") 4
    br
    input.positionForm__submit(type="submit", value="포지션 확인")
    